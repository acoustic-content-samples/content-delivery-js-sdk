{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "removeComments": false,
    "preserveConstEnums": true,
    "noLib": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "@types",
    "tests"
  ]
}
